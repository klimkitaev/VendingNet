@using VendingNet.Models
@model Dictionary<ProductTypes, int>
@{
    Layout = null;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Продукт</th>
            <th>Цена</th>
            <th>Кол-во</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var key in Model.Keys)
        {
            <tr>
                <td>@Product.GetInfo(key).Title</td>
                <td>@Product.GetInfo(key).Price</td>
                <td>@Model[key]</td>
                <td><button data-face="@key" class="btn btn-default btn-sm @(Model[key]==0 ? "disabled":"buy-button")">Купить</button></td>
            </tr>
        }
    </tbody>
</table>
